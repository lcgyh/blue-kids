/* pages/user/user.wxss */
.user-top{
  width: 100%;
  height: 566rpx;
  position: relative;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top:60rpx;
  left:50%;
  transform: translate(-50%, 0%);
}

.userinfo-avatar {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color:#484A4C;
  font-size: 32rpx;
}

.order-center{
  width: 690rpx;
  height: 300rpx;
  background: #fff;
  border-radius: 20rpx;
  /* box-shadow: 0rpx 0rpx 3rpx 3rpx #E6E8EE; */
  box-shadow: 0rpx 4rpx 4rpx 3rpx #E6E8EE;
  position: absolute;
  top:352rpx;
  left: 50%;
  margin-left: -345rpx;
}
.order-center-con{
  width: 640rpx;
  margin: 0 auto;
}
.order-center-con .title{
  display: flex;
  justify-content: space-between;
  height: 92rpx;
  line-height: 92rpx;
  border-bottom: 1px solid #DBDBDB;
}
.order-center-con .title .title-l{
  font-size: 30rpx;
  color: #262626;
  font-weight: bold;
}
.order-center-con .title .title-r{
  font-size: 24rpx;
  color: #9D9D9D;
}
.menu{
  display: flex;
  justify-content: space-around;
  margin-top:58rpx;

}
.menu .menu-item{
  width: 72rpx
}
.menu .menu-item .menu-icon{
  width:50rpx;
  height: 50rpx;
  margin: 0 auto;
}
.menu .menu-item .menu-icon image{
  width: 100%;
  height: 100%;
}
.menu .menu-item .menu-text{
  color: #484A4C;
  font-size: 24rpx;
  text-align: center;
  margin-top:24rpx;
}

.menu-list-bar{
  margin-top:115rpx;
}
.menu-list-bar .menu-list-bar-item{
  width: 690rpx;
  height: 112rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 28rpx;
  box-shadow: 0rpx 4rpx 4rpx 3rpx #E6E8EE;

}

.menu-list-bar .menu-list-bar-item .menu-list-bar-item-con{
  width:630rpx;
  height: 112rpx;
  line-height: 112rpx;
  display: flex;
  justify-content: space-between;
  margin:0 auto;
}

.menu-list-bar .menu-list-bar-item .menu-list-bar-item-con .menu-list-bar-item-con-btn{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  padding:0;
  border:none;
  background: #fff;
  line-height: 112rpx;
}
.menu-list-bar .menu-list-bar-item .menu-list-bar-item-con .menu-list-bar-item-con-btn::after {
  border: none
}


.menu-list-bar .menu-list-bar-item .menu-list-bar-item-con .menu-list-bar-item-con-l{
  font-size: 30rpx;
  color: #262626;
  font-weight: bolder;
}
.menu-list-bar .menu-list-bar-item .menu-list-bar-item-con .menu-list-bar-item-con-r{
  /* color: #9D9D9D; */
  width: 18rpx;
  height: 30rpx;
}