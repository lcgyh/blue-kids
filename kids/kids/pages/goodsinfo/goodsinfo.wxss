  margin-top: 10rpx;
}

.action .line-t .goods-r .title {
  color: #484a4c;
  font-size: 28rpx;
}

.action .line-t .goods-r .price {
  font-size: 36rpx;
  color: #35878d;
  margin-top: 16rpx;
}

.action .line-t .delete-pop {
  width: 30rpx;
  color: #484a4c;
  font-size: 36rpx;
  text-align: right;
}

