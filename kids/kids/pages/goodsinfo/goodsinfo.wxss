.container {
  background: #fff;
}

.branner-con {
  width: 100%;
  height: 580rpx;
}

.goods-title {
  width: 690rpx;
  padding: 0 30rpx;
}

.goods-title .title {
  margin-top: 40rpx;
  /* line-height: 50rpx;  */
}
.goods-title .titles_n{
  font-size: 32rpx;
  color: #484a4c;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
   margin-top: 40rpx;

}
.goods-title .titles_n .icon_ji_text{
  margin-left: 8rpx;
  margin-right: 8rpx;
}
.goods-title .titles_n .icon_ji_texts{
  margin-left: 12rpx;
}


.goods-title .title .title-top {
  display: flex;
  flex-shrink: 0;
}

.goods-title .title .title-icon {
  width: 22rpx;
  height: 22rpx;
  /* margin-top: 6rpx; */
}

.goods-title .title .title-icon image {
  width: 100%;
  height: 100%;
}

.goods-title .title .name {
  line-height: 50rpx;
  font-size: 32rpx;
  color: #484a4c;
  margin-left: 12rpx;
  margin-right: 12rpx;
  font-weight: bold;
}

.goods-title .des {
  color: #484a4c;
  font-size: 32rpx;
  margin-top: 20rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  flex-wrap: wrap;
}

.price {
  margin-top: 20rpx;
}



.price .price-icon {
  font-size: 26rpx;
  color: #35878d;
}

.price .price-con {
  color: #35878d;
  font-size: 44rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.price-sug{
  font-size: 24rpx;
  color: #484a4c;
  margin-left: 20rpx;
}

.titles {
  height: 50rpx;
  display: flex;
  margin-top: 20rpx;
}

.titles .titles-icon {
  width: 28rpx;
  height: 28rpx;
  margin-top: 6rpx;
}

.titles .titles-icon image {
  width: 100%;
  height: 100%;
}

.titles .titles-con {
  color: #484a4c;
  font-size: 36rpx;
  font-weight: bolder;
  margin-left: 12rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.dess {
  font-size: 24rpx;
  color: #484a4c;
  margin-top: 20rpx;
}

.line {
  width: 690rpx;
  height: 1rpx;
  background: #b0d7d7;
  margin-top: 60rpx;
}

.goods-info {
  margin-bottom: 200rpx;
}

.goods-info .info-pic-item {
  width: 100%;
}

.goods-info-title {
  width: 148rpx;
  height: 12rpx;
  background: #b0d7d7;
  color: #484a4c;
  font-size: 24rpx;
  text-align: center;
  line-height: 12rpx;
  margin: 0 auto;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

.foot-btn {
  width: 100%;
  height: 120rpx;
  background: #59a0a6;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  line-height: 120rpx;
  border-radius: 53rpx 0 0 0;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}

.foot-btn-dis {
  width: 100%;
  height: 120rpx;
  background: #85b7bb;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
