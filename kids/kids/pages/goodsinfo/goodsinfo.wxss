  bottom: 0;
  left: 0;
  z-index: 100;
}

.action .line-t {
  display: flex;
  border-bottom: 2rpx solid #b0d7d7;
  margin: 0 30rpx;
  padding-bottom: 20rpx;
  justify-content: space-between;
}

.action .line-t .goods-pic {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  margin-top: -50rpx;
}

.action .line-t .goods-pic image {
  width: 100%;
  height: 100%;
  border-radius: 26rpx;
}

.action .line-t .goods-r {
